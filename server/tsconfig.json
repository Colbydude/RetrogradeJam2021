{
    "compilerOptions": {
        "baseUrl": "./src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["esnext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "paths": {
            "@shared/*": ["../../shared/dist/*"]
        },
        "preserveConstEnums": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "rootDir": "./src",
        "sourceMap": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "target": "es2015"
    },
    "references": [
        {
            "path": "../shared"
        }
    ]
}
