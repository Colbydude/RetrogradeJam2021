{
    "private": true,
    "scripts": {
        "build": "npm run shared.build && npm run server.build && npm run client.build",
        "client.build": "rimraf client/dist && webpack --config client/webpack/webpack.prod.js",
        "client.serve": "serve client/dist",
        "client.start": "webpack serve --config client/webpack/webpack.dev.js",
        "lint": "eslint client/src server/src shared/src --ext .js,.ts",
        "server.build": "rimraf server/dist server/tsconfig.tsbuildinfo && tsc -b server",
        "server.start": "npm run server.build && node server/dist/index.js",
        "shared.build": "rimraf shared/dist shared/tsconfig.tsbuildinfo && tsc -b shared"
    },
    "dependencies": {
        "@geckos.io/phaser-on-nodejs": "^1.2.4",
        "module-alias": "^2.2.2",
        "phaser": "^3.55.2",
        "socket.io": "^4.1.2",
        "socket.io-client": "^4.1.2"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "copy-webpack-plugin": "^9.0.0",
        "eslint": "^7.27.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-plugin-import": "^2.23.4",
        "html-webpack-plugin": "^5.3.1",
        "rimraf": "^3.0.2",
        "serve": "^11.3.2",
        "ts-loader": "^9.2.2",
        "typescript": "^4.3.2",
        "webpack": "^5.38.1",
        "webpack-cli": "^4.7.0",
        "webpack-dev-server": "^3.11.2",
        "webpack-merge": "^5.7.3",
        "workbox-webpack-plugin": "^6.1.5"
    },
    "_moduleAliases": {
        "@shared": "shared/dist"
    }
}
