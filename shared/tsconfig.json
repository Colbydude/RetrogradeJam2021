{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["esnext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "preserveConstEnums": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "rootDir": "./src",
        "sourceMap": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "target": "es2015"
    },
    "include": [
        "./**/*.ts"
    ]
}
